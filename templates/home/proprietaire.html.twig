{% extends "base.html.twig" %}

{% block title %} {{ title }} {% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
<div class="col-md-4 mt-3">
    <div class="alert alert-success">
        {{ message }}
    </div>
</div>

{% endfor %}

<div class="row">
    <div class="col-md-6">
        {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-info">Envoyer</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}